{
  "version": "0.1.0",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "typecheck": "tsc --project . --noEmit"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "name": "react-html-map",
  "author": "Jari Zwarts",
  "module": "dist/react-html-map.esm.js",
  "size-limit": [
    {
      "path": "dist/react-html-map.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/react-html-map.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.7.0",
    "@types/domhandler": "^2.4.1",
    "@types/htmlparser2": "^3.10.2",
    "@types/react": "^16.9.56",
    "@types/react-dom": "^16.9.9",
    "@types/react-html-parser": "^2.0.1",
    "@types/react-test-renderer": "^17.0.1",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.3",
    "oberon-prettier-config": "^1.0.0",
    "prettier": "^2.2.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-test-renderer": "^17.0.2",
    "size-limit": "^4.7.0",
    "tsdx": "^0.14.1",
    "tslib": "^2.0.3",
    "typescript": "^4.0.5"
  },
  "lint-staged": {
    "*.ts?(x)": [
      "prettier --write",
      "npm run test --if-present -- --findRelatedTests",
      "npm run lint --"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run typecheck && lint-staged"
    }
  },
  "prettier": {
    "trailingComma": "es5",
    "printWidth": 120,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 4,
    "endOfLine": "lf"
  },
  "dependencies": {
    "domhandler": "^2.4.2",
    "htmlparser2": "^3.10.1",
    "react-html-parser": "^2.0.2"
  }
}
